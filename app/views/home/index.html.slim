        = link_to "Software", "/software",  class: "uk-heading-xlarge chex-link"
    .uk-width-1-3.uk-height-large.uk-position-bottom-center
        //switch to .uk-logo + CHEX.svg
        img.uk-logo (src="/assets/chex-logo.svg" width="500" height="500" uk-svg)
    .uk-width-1-3.uk-height-large.uk-position-center-right
        = link_to "Art", "/art",  class: "uk-heading-xlarge chex-link"
    .uk-width-1-3.uk-position-bottom-center
        a.uk-heading-xlarge.chex-link(href="#modal-center" uk-toggle) Contact
        = render 'layouts/contact'
